---
import SideNavigationItem from "./SideNavigationItem.astro";
---

<aside
  class="fixed bottom-0 max-h-[30rem] top-1/2 translate-y-[-50%] bg-muted py-4 text-muted-foreground shadow-lg z-50 rounded-lg mx-8 hidden landscape:block"
>
  <nav class="size-full">
    <ul class="flex flex-col size-full">
      <SideNavigationItem
        label="Play"
        path="/"
        icon="i-heroicons-play"
        activeIcon="i-heroicons-play-16-solid"
      />
      <SideNavigationItem
        label="Stats"
        path="/stats"
        icon="i-heroicons-chart-pie"
        activeIcon="i-heroicons-chart-pie-16-solid"
      />
      <SideNavigationItem
        label="Help"
        path="/help"
        icon="i-heroicons-question-mark-circle"
        activeIcon="i-heroicons-question-mark-circle-16-solid"
      />
      <SideNavigationItem
        label="Config"
        path="/config"
        icon="i-heroicons-cog"
        activeIcon="i-heroicons-cog-16-solid"
      />
    </ul>
  </nav>
</aside>
